<h2>
  <%= @employe.name %>
</h2>
<div class="container">
	<h4>Projects</h4>
	<div class="row">
		<div class="col-md-6">
			<table class="table">
				<tr>
					<th>Id</th>
					<th>Nombre</th>
					<th></th>
				</tr>
				<% @projects.each do |project| %>
					<tr>
						<td><%= project.id %></td>
						<td><%= project.name %></td>
						<td><%= link_to("Eliminar", remove_project_employe_path(@employe, project) , method: :delete, class: "btn btn-danger") %></td>
					</tr>
				<% end %>
				<tr>
					<td></td>
			        <td>
			            <%= form_tag (add_project_employe_path(@employe)) do %>
			              <%= select_tag 'project_id', options_for_select(Project.all.collect{ |p| [p.name, p.id] }) %>
			              <%= submit_tag "Add", name: nil, class: 'btn btn-info' %>
			            <% end %>
			        </td>
			        <td></td>
				</tr>
			</table>
		</div>
	</div>
</div>

<%= link_to 'Edit', edit_employe_path(@employe) %> |
<%= link_to 'Back', employes_path %>
